
@model IEnumerable <LaraAbdallah_Homework3.Models.Transaction>
@{
    ViewBag.Title = "Statement";
}

<h2>Statement</h2>

<table id="transaction" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <td><strong>Amount</strong></td>
            <td><strong>Date and Time</strong></td>
            <td><strong>Amount Source</strong></td>
        </tr>
    </thead>
    <tbody data-bind="foreach:currentTransactions">
        @foreach (var item in Model)
        {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.Amount)</td>
            <td>@Html.DisplayFor(modelItem => item.TransactionDate)</td>
            <td>@Html.DisplayFor(modelItem => item.TansactionSource)</td>
        </tr>}
    </tbody>
</table>
@section scripts
{
<script>
    $(document).ready(function () {
        $("#transaction").DataTable();
    });
</script>
    }